FROM node:18-alpine
MAINTAINER gear

WORKDIR /usr/src

COPY . /usr/src

RUN apk update

RUN apk add xsel

ARG REACT_APP_CONTRACT_ADDRESS \
    REACT_APP_DEFAULT_NODES_URL \
    REACT_APP_STAGING_NODES_URL \
    REACT_APP_NODE
ENV REACT_APP_CONTRACT_ADDRESS=${REACT_APP_CONTRACT_ADDRESS} \
    REACT_APP_DEFAULT_NODES_URL=${REACT_APP_DEFAULT_NODES_URL} \
    REACT_APP_STAGING_NODES_URL=${REACT_APP_STAGING_NODES_URL} \
    REACT_APP_NODE=${REACT_APP_NODE} \
    DISABLE_ESLINT_PLUGIN=true

RUN yarn install

RUN yarn build

RUN npm install --global serve

CMD ["serve", "-s", "/usr/src/build"]
